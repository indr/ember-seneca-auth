<div class="row">
    <div class="col-sm-6">
        <h2>login()
            <small>a registered user</small>
        </h2>
        <p>POST /auth/login</p>

      {{#bs-form action="submit"}}
        {{#bs-form-group}}
            <label class="control-label">Email address or nick (username)</label>
          {{bs-input type="text" value=username}}
        {{/bs-form-group}}
        {{#bs-form-group}}
            <label class="control-label">Password (password)</label>
          {{bs-input type="text" value=password}}
        {{/bs-form-group}}

        {{#bs-button type="primary" buttonType="submit"}}login{{/bs-button}}
        {{#bs-button type="default" buttonType="reset"}}reset{{/bs-button}}
      {{/bs-form}}
    </div>
    <div class="col-sm-6">
      {{response-view response=response xhr=xhr}}
    </div>
</div>
